<div class="container">
  <div class="row">
    <div id="filter-panel" class="collapse filter-panel">
      <div class="panel panel-default">
        <div class="panel-body">
            <%= form_for :sales_filter ,html: {class: 'form-inline'} do |f| %>
                <div class="form-group">
                  <label class="filter-col" style="margin-right:0;" for="pref-perpage">Location:</label>
                  <%= f.select(:location_id, current_company.locations.published.collect {|role| [ role.name, role.id ] }, {prompt: 'Select Location'} , class: "form-control" ) %>
                </div>

                <div class="form-group">
                  <label class="filter-col" style="margin-right:0;" for="pref-orderby">Employee:</label>
                  <%= f.select(:employee_id, current_company.users.collect {|role| [ role.username, role.id ] }, {prompt: 'Select Employee'} , class: "form-control" ) %>
                </div>

              <div class="form-group">
                <!--<label class="filter-col" style="margin-right:0;" for="pref-search">Date Range:</label>-->
                <div id="reportrange" style="background: #fff; cursor: pointer; padding: 7px 15px; border: 1px solid #ccc; width: 100%">
                  <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;
                  <span></span> <b class="caret"></b>
                </div>
              </div>

                <div class="form-group">
                  <%= f.button "<span class='glyphicon glyphicon-record'></span> Save".html_safe , data: {disable_with: disable_spinning("Submitting...")} , class: "btn btn-default filter-col"%>
                </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= button_tag "<span class='glyphicon glyphicon-cog'></span> Filters".html_safe , class: 'btn btn-primary pull-right' , data: {'toggle': 'collapse' , 'target': '#filter-panel' } %>
  </div>
</div>
<style>
.container{
    margin-top:30px;
}
.filter-col{
    padding-left:10px;
    padding-right:10px;
}
</style>