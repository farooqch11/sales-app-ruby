        .col-lg-6.col-md-6.col-sm-6.col-xs-12
          .list-group
            = link_to raw("<i class='fa fa-shopping-cart fa-2x'></i>Start a New Sale") , new_sale_path , class: 'list-group-item'
      .row
        .col-sm-12
