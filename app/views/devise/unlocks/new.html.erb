<section id="content" class="m-t-lg wrapper-md animated fadeInUp">
  <div class="container aside-xxl">
    <section class="m-t-lg">
        <h2>Resend unlock instructions</h2>

        <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
          <%= devise_error_messages! %>

            <div >
              <label class="control-label">Email</label>
              <%= f.email_field :email, :class => 'form-control input-lg', :placeholder => 'test@example.com', required: true, autofocus: true, email: true %>
            </div>

            <div class="form-group " >
              <button class="btn btn-info btn-lg btn-block" value="Reset" type="submit">Reset and send me instructions</button>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </section>
  </div>
</section>
