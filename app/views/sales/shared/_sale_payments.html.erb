<h4 class="text-info"><span class="glyphicon glyphicon-credit-card"></span> Payments</h4>
  <hr class="hidden-print" />

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Payment Type</th>
        <th>Amount</th>
        <th>Created At</th>
      </tr>
    </thead>

    <tbody>
      <% if @sale.payments.blank? %>
        <tr>
          <td colspan="3">There are no payments on this balance yet.</td>
        </tr>
      <% else %>
        <%= fields_for @sale do |f|%>
          <%= f.fields_for :payments do |e| %>
    	      <tr>
    	        <td><%= e.text_field :payment_type, :class => "form-control", :placeholder => "Payment Type", :readonly => true %></td>
    	        <td><%= e.text_field :amount, :class => "form-control", :placeholder => "Amount", :readonly => true %></td>
    	        <td><%= e.text_field :created_at, :class => "form-control", :placeholder => "Created At", :readonly => true %></td>
    	      </tr>
    	    <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>

<% if @sale.remaining_balance <= 0.00 && @sale.payments.count > 0 %>
  <div class="alert alert-info hidden-print">Payment Complete</div>
  Change Due: <%= number_to_currency(@sale.change_due, unit: current_company.currency) %>
<% else %>
  <h4 class="text-info hidden-print"><span class="glyphicon glyphicon-shopping-cart"></span> Balance</h4>

  <div class="alert alert-danger hidden-print">
    <%= number_to_currency(@sale.remaining_balance, unit: current_company.currency) %>
  </div>


  <hr class="hidden-print" />

  <% unless @sale.total_amount.blank? %>
    <!-- Button trigger modal -->
    <button class="btn btn-info btn-lg hidden-print" data-toggle="modal" data-target="#makePayment">
      Make Payment
    </button>  
  <% end %>
<% end %>