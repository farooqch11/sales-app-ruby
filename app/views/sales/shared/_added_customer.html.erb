<% unless @sale.customer.blank? %>
	<h4 class="text-primary">
		<span class="glyphicon glyphicon-user"></span> Customer
	</h4>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email Address</th>
          <th>Phone Number</th>
          <th>Country</th>
          <th>City</th>
          <th>State</th>
          <th>zip</th>
        </tr>
      </thead>

      <tbody>
        <%= fields_for @sale do |f|%>
          <%= f.fields_for :customer, current_company.customers.find(@sale.customer.id) do |e| %>
            <tr>
              <td><%= e.text_field :first_name, :class => "form-control", :placeholder => "First Name", :readonly => true %></td>
              <td><%= e.text_field :last_name, :class => "form-control", :placeholder => "Last Name", :readonly => true %></td>
              <td><%= e.text_field :email_address, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= e.text_field :phone_number, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <%= e.fields_for :address do |a| %>
              <td><%= a.text_field :country, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= a.text_field :city, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= a.text_field :state, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= a.text_field :zip, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>