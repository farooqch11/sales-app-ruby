<section class="hbox stretch">
  <!-- .aside -->
  <aside class="aside-xl b-l b-r" id="note-list">
    <section class="vbox flex">
      <header class="header clearfix">
        <span class="pull-right m-t"><button class="btn btn-dark btn-sm btn-icon" id="new-note" data-toggle="tooltip" data-placement="right" title="" data-original-title="New"><i class="fa fa-bars"></i></button></span>
        <p class="h3">Activity</p>
        <div class="input-group m-t-sm m-b-sm">
          <span class="input-group-addon input-sm"><i class="fa fa-search"></i></span>
          <input type="text" class="form-control input-sm" id="search-note" placeholder="search">
        </div>
      </header>
      <section>
        <section>
          <section>
            <div class="padder">
              <!-- note list -->
              <ul id="note-items" class="list-group list-group-sp">
                <% @sales.each do |sale|%>
                    <a href="<%= sale_path(sale) %>" >
                <li class="list-group-item hover <%= @sale.id == sale.id ? 'active bg-info' : ''%>">
                  <div class="media">
                    <span class="pull-left thumb-sm"><img src="<%= image_path("#{sale.payments.last.payment_type}.png" , style: 'width:48px')  %>"></span>
                    <div class="pull-right text-muted m-t-sm">
                      <%= sale.created_at.strftime('%I:%M %p')%>
                    </div>
                    <div class="media-body m-t-sm">
                      <div><strong class="block"> <%=value_in_currency(sale.total_amount) %> </strong></div>
                      <!--<small class="text-muted">about 2 minutes ago</small>-->
                    </div>
                  </div>

                </li></a>
                    <% end %>
              </ul>
              <!-- templates -->
              <!-- note list -->
              <p class="text-center">&nbsp;</p>
            </div>
          </section>
        </section>
      </section>
    </section>
  </aside>
  <!-- /.aside -->
  <aside id="note-detail">
    <section class="vbox">
      <header class="header bg-light lter bg-gradient b-note-b">
        <p id="note-date"><b> <%=value_in_currency(@sale.total_amount) %> </b></p>
      </header>
      <section class="scrollable bg-light lter">
        <section class="hbox stretch">
          <aside>

            <section class="vbox b-b">
              <div class="col-sm-12">

                <section class="panel panel-default" style="border: none">
                  <ul class="list-group alt" style="border: none">
                    <li class="list-group-item" style="border: none">
                      <div class="media">
                        <div class="media-body m-t-sm">
                          <span class="col-sm-6">
                            <a href="<%= invoice_sale_path(@sale , format: :pdf)%>" target="_blank" class="btn btn-default btn-lg btn-block col-sm-6">Issue Receipt</a>
                            </span>
                           <span class="col-sm-6">
                            <%= link_to 'Issue Refund' , issue_refund_sale_path(@sale), class: 'btn btn-default btn-lg btn-block col-sm-6', data: {confirm: 'Are you sure?', verify: 'Foo', verify_text: 'Type "Foo" to confirm'} %>
                           </span>
                        </div>
                          <div>
                        </div>
                      </div>
                    </li>

                    <li class="list-group-item" style="border: none">
                      <div class="media">
                        <b><%= @sale.payments.last.payment_type.humanize.upcase %> <%= @sale.created_at.strftime('%m/%d/%Y %I:%M %p')%></b>
                      </div>
                    </li>
                    <% if @sale.payments.last.credit_card? %>
                        <li class="list-group-item" style="border: none">
                          <div class="media">
                            <span class="pull-left thumb-sm"><img src="<%= image_path("#{@sale.payments.last.payment_type}.png") %>"></span>
                            <div class="pull-right text-mutted m-t-sm">
                              <b><%= value_in_currency @sale.total_amount %></b>
                            </div>
                            <div class="media-body m-t-sm">
                              <div><b>Card Number 9101</b></div>
                            </div>
                          </div>
                        </li>
                    <% end %>
                    <li class="list-group-item" style="border: none">
                      <div class="media">
                        <span class="pull-left thumb-sm"><img src="<%= image_path('invoice.png') %>"></span>
                        <div class="media-body m-t-sm">
                          <div><b>RECEIPT NUMBER <%= @sale.id%></b></div>
                        </div>
                      </div>
                    </li>
                  </ul>
                </section>

                <section class="panel panel-default">
                  <!--<header class="panel-heading">-->
                  <!--Items-->
                  <!--</header>-->
                  <ul class="list-group alt">
                    <li class="list-group-item">
                      <div class="media">
                        <b>Items</b>
                      </div>
                    </li>
                    <% @sale.line_items.each do |line| %>
                        <li class="list-group-item">
                          <div class="media">
                            <span class="pull-left thumb-sm"><img src="<%= line.item.photo.present? ? line.item.photo : asset_path('product-no-image.jpg') %>"></span>
                            <div class="pull-right text-mutted m-t-sm">
                              <b><%= value_in_currency line.total_price %></b>
                            </div>
                            <div class="media-body m-t-sm">
                              <div><b><%= line.item.name %></b></div>
                            </div>
                          </div>
                        </li>
                    <% end %>
                    </li>
                  </ul>
                </section>
              </div>
            </section>
          </aside>
        </section>
      </section>
    </section>
  </aside>
</section>

<!-- Modal -->
<div id="invoice-modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Invoice</h4>
      </div>
      <div class="modal-body">
        <%= render 'sales/shared/invoice'%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
        <button href="#" class="btn btn-sm btn-info pull-right invoice-<%= @sale.id%>" onClick="window.print('#modal-body');">Print</button>
      </div>
    </div>

  </div>
</div>
