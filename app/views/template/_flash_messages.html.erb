<%if flash[:alert].present? || flash[:toastr].present? || flash[:error].present? || flash[:errors].present? || flash[:success].present? || flash[:notice].present? || flash[:info].present?%>

    <%if flash[:alert].present?%>
        <script>
            $.amaran({
                'theme'     :'colorful',
                'content'   :{
                    bgcolor:'#FFC333',
                    color:'#fff',
                    message:"<%= flash[:alert] %>"
                },
                'cssanimationOut'   :'slideRight',
                'outEffect'         :'slideRight',
                'closeOnClick'  :true,
                'position'          :'top right',
                'closeButton': true
            });
        </script>
    <%end%>

    <%if flash[:error].present?%>
        <script>
            $.amaran({
                'theme'     :'colorful',
                'content'   :{
                    bgcolor:'#D04B2B',
                    color:'#fff',
                    message:"<%= flash[:error] %>"
                },
                'cssanimationOut'   :'slideRight',
