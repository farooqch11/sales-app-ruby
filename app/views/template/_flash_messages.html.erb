<%if flash[:alert].present? || flash[:toastr].present? || flash[:error].present? || flash[:errors].present? || flash[:success].present? || flash[:notice].present? || flash[:info].present?%>

    <%if flash[:alert].present?%>
        <script>
          flash_alert("<%= flash[:alert] %>");
        </script>
    <%end%>

    <%if flash[:error].present?%>
        <script>
            flash_error("<%= flash[:error] %>");
        </script>
    <%end%>

    <%if flash[:errors].present?%>
        <%flash[:errors].each do |e|%>
            <script>
                flash_error("<%= e %>");
            </script>
        <%end%>
    <%end%>

    <%if flash[:success].present?%>
        <script>
           flash_success("<%= flash[:success] %>");
        </script>
    <%end%>

    <%if flash[:notice].present?%>
        <script>
            flash_notice("<%= flash[:notice] %>");
        </script>
    <%end%>

    <%if flash[:info].present?%>
        <script>
            flash_info("<%= flash[:info] %>");
        </script>
    <%end%>
<%end%>