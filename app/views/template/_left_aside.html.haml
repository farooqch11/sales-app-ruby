%aside#nav.bg-dark.aside-md.hidden-print
  / <aside class="bg-dark lter nav-xs aside-md hidden-print" id="nav">
  %section.vbox
    / <header class="header bg-primary lter text-center clearfix">
    / &lt;!&ndash;<div class="btn-group">&ndash;&gt;
    / &lt;!&ndash;<button type="button" class="btn btn-sm btn-dark btn-icon" title="New project"><i class="fa fa-plus"></i></button>&ndash;&gt;
    / &lt;!&ndash;<div class="btn-group hidden-nav-xs">&ndash;&gt;
    / &lt;!&ndash;<button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">&ndash;&gt;
    / &lt;!&ndash;Switch Project&ndash;&gt;
    / &lt;!&ndash;<span class="caret"></span>&ndash;&gt;
    / &lt;!&ndash;</button>&ndash;&gt;
