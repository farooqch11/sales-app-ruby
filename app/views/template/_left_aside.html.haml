    / &lt;!&ndash;</ul>&ndash;&gt;
    / &lt;!&ndash;</div>&ndash;&gt;
    / &lt;!&ndash;</div>&ndash;&gt;
    / </header>
    %section.w-f.scrollable
      .slim-scroll{"data-color" => "#333333", "data-disable-fade-out" => "true", "data-distance" => "0", "data-height" => "auto", "data-size" => "5px"}
        / nav
        %nav.nav-primary.hidden-xs
          %ul.nav
            %li{:class => dashboard_active}
              %a{:class => dashboard_active, :href => dashboard_index_path}
                %i.fa.fa-dashboard.icon
                  %b.bg-info
                %span HOME
            - if can? :manage, User
              %li{:class => users_active}
                %a{:class => users_active, :href => users_path}
                  %i.fa.fa-user.icon
                    %b.bg-info
                  %span EMPLOYEES
            - if true
              %li{:class => reports_active}
                %a{:class => "reports_active", :href => reports_path}
                  %i.fa.fa-bar-chart-o.icon
                    %b.bg-info
                  %span.pull-right
                    %i.fa.fa-angle-down.text
                    %i.fa.fa-angle-up.text-active
                  %span REPORTS
                %ul.nav.lt
                  %li
                    %a{:href => sales_reports_path}
                      %i.fa.fa-angle-right
                      %span Sales Report
                  %li
                    %a{:href => inventory_reports_path}
                      %i.fa.fa-angle-right
                      %span Inventory Report
                  %li
                    %a{:href => dead_inventory_reports_path}
                      %i.fa.fa-angle-right
                      %span Dead Inventory Report
            - if can? :manage, Item
              %li{:class => item_categories_active}
                %a{:class => item_categories_active, :href => "#item_category"}
                  %i.fa.fa-clipboard.icon
                    %b.bg-info
                  %span.pull-right
                    %i.fa.fa-angle-down.text
                    %i.fa.fa-angle-up.text-active
                  %span INVENTORY
                %ul.nav.lt
                  %li
                    %a{:class => item_categories_active, :href => item_categories_path}
                      %i.fa.fa-angle-right
                      %span Items Category
                  %li
                    %a{:class => item_categories_active, :href => items_path}
                      %i.fa.fa-angle-right
                      %span Items
                  %li
                    %a{:class => item_categories_active, :href => items_path}
                      %i.fa.fa-angle-right
                      %span Purchase Items
            - if can? :manage , Customer
              %li{:class => customers_active}
                %a{:class => customers_active, :href => customers_path}
                  %i.fa.fa-male.icon
                    %b.bg-info
                  %span CUSTOMERS
            - if can? :manage, Sale
              %li{:class => sales_active}
                %a{:class => sales_active, :href => "#"}
                  %i.fa.fa-shopping-cart.icon
                    %b.bg-info
                  %span.pull-right
                    %i.fa.fa-angle-down.text
                    %i.fa.fa-angle-up.text-active
                  %span SALES
                %ul.nav.lt
                  %li
                    %a{:href => new_sale_path}
                      %i.fa.fa-angle-right
                      %span Point of Sale
                  %li
                    %a{:href => "#{current_company.sales.joins(:payments).count > 0 ? sale_path(current_company.sales.joins(:payments).last) : '#'}"}
                      %i.fa.fa-angle-right
                      %span Sales Record
            %li{:class => "#{(is_active 'expenses') || (is_active 'finance')}"}
              %a{:class => item_categories_active, :href => "#item_category"}
                %i.fa.fa-rocket.icon
                  %b.bg-info
                %span.pull-right
                  %i.fa.fa-angle-down.text
                  %i.fa.fa-angle-up.text-active
                %span FINANCE
              %ul.nav.lt
                %li
                  %a{:href => finance_index_path}
                    %i.fa.fa-angle-right
                    %span Financial Dashboard
                %li
                  %a{:href => items_path}
                    %i.fa.fa-angle-right
                    %span Bank Reconciliations
                - if can? :manage , Expense
                  %li
                    %a{:href => expenses_path}
                      %i.fa.fa-angle-right
                      %span Expenses
            %li{:class => is_setting_active}
              %a{:class => is_setting_active, :href => "#"}
                %i.fa.fa-gear.icon
                  %b.bg-info
                %span.pull-right
                  %i.fa.fa-angle-down.text
                  %i.fa.fa-angle-up.text-active
                %span SETTINGS
              %ul.nav.lt
                -if can? :manage , Company
                  %li
                    %a{:href => "#{edit_configuration_path(current_company)}"}
                      %i.fa.fa-angle-right
                      %span Configuration
                - if can? :manage , Location
                  %li
                    %a{:href => locations_path}
                      %i.fa.fa-angle-right
                      %span Locations
    / / nav
    %footer.footer.lt.hidden-xs.b-t.b-light
      %a.pull-right.btn.btn-sm.btn-default.btn-icon{"data-toggle" => "class:nav-xs", :href => "#nav"}
        %i.fa.fa-angle-left.text
        %i.fa.fa-angle-right.text-active
