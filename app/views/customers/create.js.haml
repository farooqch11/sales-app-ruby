- if flash[:success].present?
  flash_success("#{flash[:success]}");
  - if @reload
    window.loaction.reload();
  - else
    -if not params.has_key?(:sale_id)
      $('#new_customer').modal('toggle');
      $(".customer-table tbody").prepend("#{j render 'customers/partials/tr' , customer: @customer , new: true}");
    -else
      $('.btn-add-sale-customer').trigger('click');
      $(".add-customer-table tbody").prepend("#{j render 'customers/partials/sale_tr' , customer: @customer , new: true}");

- elsif flash[:errors].present?
  - flash[:errors].each do |e|
    flash_error("#{e}");