
  <section class="hbox stretch">
    <aside>
      <section class="vbox">
        <header class="header bg-white b-b clearfix">
          <div class="row m-t-sm">
            <div class="col-sm-8 m-b-xs">
              <a href="#subNav" data-toggle="class:hide" class="btn btn-sm btn-default active"><i class="fa fa-caret-right text fa-lg"></i><i class="fa fa-caret-left text-active fa-lg"></i></a>
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-default" title="Refresh"><i class="fa fa-refresh"></i></button>
                <button type="button" class="btn btn-sm btn-default" title="Remove"><i class="fa fa-trash-o"></i></button>
                <button type="button" class="btn btn-sm btn-default" title="Filter" data-toggle="dropdown"><i class="fa fa-filter"></i> <span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><a href="#">Action</a></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li class="divider"></li>
                  <li><a href="#">Separated link</a></li>
                </ul>
              </div>
              <a href="<%= new_item_path%>" class="btn btn btn-sm btn-primary"><i class="fa fa-plus"></i> Create</a>
              <!--<a href="#new-item-category" data-toggle="new-item-category" class="btn btn-sm btn-success"><i class="fa fa-plus"></i> Create</a>-->
            </div>
            <div class="col-sm-4 m-b-xs">
              <%= form_for item_categories_path do |f| %>
                  <div class="input-group">
                    <%= f.text_field :name , class: "input-sm form-control"  , placeholder: "Search" %>
                    <span class="input-group-btn">
                        <%= f.button "Go!" , class: "btn btn-sm btn-default" %>
                    </span>
                  </div>
              <%end%>

            </div>


          </div>
        </header>
        <section class="scrollable wrapper w-f">
          <section class="panel panel-default">
            <div class="table-responsive">
              <table class="table table-striped m-b-none">
                <thead>
                <tr>
                  <th width="20"></th>
                  <!--<th class="th-sortable" data-toggle="class">Name-->
                              <!--<span class="th-sort">-->
                                <!--<i class="fa fa-sort-down text"></i>-->
                                <!--<i class="fa fa-sort-up text-active"></i>-->
                                <!--<i class="fa fa-sort"></i>-->
                              <!--</span>-->
                  <!--</th>-->
                  <th>Sku</th>
                  <th>Item</th>
                  <th>Category</th>
                  <th>Location</th>
                  <th>Available</th>
                  <th>Sold</th>
                  <th>Price</th>
                  <th><span class="pull-right">Actions</span></th>
                </tr>
                </thead>
                <tbody>
                <% @items.each do |item| %>
                    <tr class="<%= item.stock_amount > 0 ? '' : 'danger' %>">
                      <td><%= image_tag item.photo, style: 'widh: 50px ; width: 50px ' %></td>

                      <td><%= item.sku %></td>
                      <td><%= item.name %></td>
                      <td><%= item.item_category.blank? ? '-' : item.item_category.name %></td>
                      <td><%= item.location.blank? ? '-' : item.location.name %></td>
                      <td><%= item.stock_amount %></td>
                      <td><%= item.amount_sold %></td>
                      <td><%= number_to_currency(item.price , unit: current_company.currency)%></td>
                      <td class="text-right">
                        <%=link_to raw("<i class= 'fa fa-pencil'></i>"),edit_item_path(item), class: "btn btn-dark"%>
                        <%=link_to raw("<i class= 'fa fa-times'></i>"),item, class: "btn btn-dark",:method => :delete, data: {:confirm => "Are you sure you want to delete this item?"}%>
                      </td>
                    </tr>
                <% end %>
                <!--<tr>-->
                <!--<td><input type="checkbox" name="post[]" value="2"></td>-->
                <!--&lt;!&ndash;<td><a href="#modal" data-toggle="modal"><i class="fa fa-search-plus"></i></a></td>&ndash;&gt;-->
                <!--<td>Idrawfast</td>-->
                <!--<td>4c</td>-->
                <!--<td>Jul 25, 2013</td>-->
                <!--<td>-->
                <!--&lt;!&ndash;<a href="#" class="active" data-toggle="class"><i class="fa fa-check text-success text-active"></i><i class="fa fa-times text-danger text"></i></a>&ndash;&gt;-->
                <!--</td>-->
                <!--</tr>-->
                </tbody>
              </table>
            </div>
          </section>
        </section>
        <footer class="footer bg-white b-t">
          <div class="row text-center-xs pull-right" style="margin: 0px 2%;">
            <%= will_paginate @items, renderer: BootstrapPagination::Rails %>
          </div>

        </footer>
      </section>
    </aside>
  <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
</section>