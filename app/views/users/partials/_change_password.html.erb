<div class="modal fade" id="change_password_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><b>Change Password</b></h4>
      </div>
      <%= form_for current_user ,url: password_path(current_user) ,method: 'PUT' , html: {class: "bs-example"} do |f|  %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
          <div class="modal-body">
            <div class="form-group">
              <label>Current Password<span class="text-danger"> *</span></label>
                <input type="password" name="current_password[password]" autocomplete="off" minlength="8" required= "true" class = "form-control" placeholder="Current Password"/>
            </div>
            <div class="form-group">
              <label>Password<span class="text-danger"> *</span></label>
                <input type="password" name="password[password]"  minlength="8" autocomplete="off" required= "true" class = "form-control" placeholder="New Password"/>
            </div>
            <div class="form-group">
              <label>Confirm Password<span class="text-danger"> *</span></label>
                <input type="password" name="password[password_confirmation]" autocomplete="off" minlength="8" required= "true" class = "form-control" placeholder="Confirm Password"/>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.button "Save".html_safe , class: "btn btn-info" , data: {disable_with: disable_spinning("Saving...")}%>
          </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>