                  <th>Email</th>
                  <th>Role</th>
                  <th>Salay</th>
                  <th>Status</th>
                  <th><span class="pull-right">Actions</span></th>
                </tr>
                </thead>
                <tbody>
                <% @users.each do |user| %>
                    <tr>
                      <!--<td><input type="checkbox" name="user[]" value="<%#= user.id %>"></td>-->
                      <td><%= user.username %></td>
                      <td><%= user.email %></td>
                      <td><%= user.role.name %></td>
                      <td><%= user.salary.present? ? user.salary : '-' %></td>
                      <td><%= user.confirmed? ? 'Confirmed' : 'Pending'%></td>
                      <td class="text-right">
                        <%=link_to raw("<i class= 'fa fa-pencil'></i>"),edit_user_path(user), class: "btn btn-info"%>
                        <%=link_to raw("<i class= 'fa fa-times'></i>"),user, class: "btn btn-danger",:method => :delete, data: {:confirm => "Are you sure?"}%>
                      </td>
                    </tr>
                <% end %>
