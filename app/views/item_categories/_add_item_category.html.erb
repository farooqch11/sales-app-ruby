<div class="modal fade" id="new-item-category">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(@item_category) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create New Item Category</h4>
      </div>
      <div class="modal-body">
                  <div class="form-group">
                    <label>Name<span class="text-danger">*</span></label>
                    <%= f.text_field :name, :class => "form-control", :placeholder => "Category Name" , required: true%>
                  </div>
                  <div class="form-group">
                    <label>Description</label>
                    <%= f.text_area :description, :class => "form-control", :placeholder => "Category Description" %>
                  </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.button "save" , class: "btn btn-info" , html: {"data-loading-text": "Saving..."}%>
      </div>
      <%end%>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
<script>
  $('#new_item_category').validate();
</script>