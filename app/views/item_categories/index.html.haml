                  %tr
                    %td
                      %input{:name => "post[]", :type => "checkbox", :value => "#{item_category.id}"}/
                    %td= item_category.name
                    %td= item_category.description
                    %td.text-right
                      = link_to raw("<i class= 'fa fa-pencil'></i>"),item_category_path(item_category), class: "btn btn-dark"
                      = link_to raw("<i class= 'fa fa-times'></i>"),item_category_path(item_category), class: "btn btn-dark",:method => :delete, data: {:confirm => "Are you sure you want to delete this category?"}
