<section id="content">
  <section class="hbox stretch">
    <aside>
      <section class="vbox">
        <header class="header bg-white b-b clearfix">
          <div class="row m-t-sm">
            <div class="col-sm-8 m-b-xs">
              <a href="#subNav" data-toggle="class:hide" class="btn btn-sm btn-default active"><i class="fa fa-caret-right text fa-lg"></i><i class="fa fa-caret-left text-active fa-lg"></i></a>
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-default" title="Refresh"><i class="fa fa-refresh"></i></button>
                <button type="button" class="btn btn-sm btn-default" title="Remove"><i class="fa fa-trash-o"></i></button>
                <button type="button" class="btn btn-sm btn-default" title="Filter" data-toggle="dropdown"><i class="fa fa-filter"></i> <span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><a href="#">Action</a></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li class="divider"></li>
                  <li><a href="#">Separated link</a></li>
                </ul>
              </div>
              <a href="#" data-toggle="ajaxModal" class="btn btn-sm btn-default"><i class="fa fa-plus"></i> Create</a>
            </div>
            <div class="col-sm-4 m-b-xs">
              <div class="input-group">
                <input type="text" class="input-sm form-control" placeholder="Search">
                        <span class="input-group-btn">
                          <button class="btn btn-sm btn-default" type="button">Go!</button>
                        </span>
              </div>
            </div>
          </div>
        </header>
        <section class="scrollable wrapper w-f">
          <section class="panel panel-default">
            <div class="table-responsive">
              <table class="table table-striped m-b-none">
                <thead>
                <tr>
                  <th width="20"><input type="checkbox"></th>
                  <th class="th-sortable" data-toggle="class">Name
                              <span class="th-sort">
                                <i class="fa fa-sort-down text"></i>
                                <i class="fa fa-sort-up text-active"></i>
                                <i class="fa fa-sort"></i>
                              </span>
                  </th>
                  <th>Description</th>
                  <th>Date</th>
                  <th width="30"></th>
                </tr>
                </thead>
                <tbody>
                <%@item_categories.each do |item_category|%>
                    <tr>
                      <td><input type="checkbox" name="post[]" value="<%= item_category.id %>"></td>
                      <td><%=item_category.name%></td>
                      <td><%=item_category.description%></td>
                      <td class="text-right">
                          <%=link_to raw("<i class= 'fa fa-pencil'></i>"),item_category_path(item_category), class: "btn btn-info",:method => :delete, data: {:confirm => "Are you sure you want to delete this category?"}%>
                          <%=link_to raw("<i class= 'fa fa-times'></i>"),item_category_path(item_category), class: "btn btn-danger",:method => :delete, data: {:confirm => "Are you sure you want to delete this category?"}%>
                      </td>

                    </tr>
                <%end%>
                <!--<tr>-->
                  <!--<td><input type="checkbox" name="post[]" value="2"></td>-->
