    <section class="scrollable padder">

      <div class="col-sm-12">
        <section class="panel panel-default">
          <header class="panel-heading" style="background:#FFF;">
            <h3 style="color:#717171;">Change Password</h3>
          </header>
          <div class="panel-body">
            <%= form_for current_user ,url: password_path(current_user) ,method: 'PUT' , html: {class: "bs-example form-horizontal"} do |f|  %>
              <div class="form-group">
                <label class="col-lg-2 control-label">Current Password <span style="color:red;">*</span></label>
                <div class="col-lg-10">
                  <input type="password" name="current_password[password]" minlength="8" required= "true" class = "form-control  input-lg" placeholder="Current Password"/>
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-2 control-label"> Password <span style="color:red;">*</span></label>
                <div class="col-lg-10">
                  <input type="password" name="password[password]"  minlength="8" required= "true" class = "form-control  input-lg" placeholder="New Password"/>
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-2 control-label"> Password Confirmation <span style="color:red;">*</span></label>
                <div class="col-lg-10">
                  <input type="password" name="password[password_confirmation]"  minlength="8" required= "true" class = "form-control  input-lg" placeholder="Confirm Password"/>
                </div>
              </div>
              <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
              <div class=" pull-right">
                <%= f.submit 'Submit' , class: 'btn btn-info' %>
              </div>
           <% end %>
          </div>
        </section>
      </div>
    <!--</section>-->
</section>
